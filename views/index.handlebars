<div class="container">
	<div class="box">
		<div class="box--title">Simplify Your Links</div>
			<form action="/update" method="POST">
			    <input class="input" type="text" name="originalURL" placeholder="Your original URL here">
			    <input type="submit" class="btn" value="Shorten URL">
			</form>

		<div class="tagline"></div>
	</div>
</div>

<div class="container">
	<table class="table table-hover">
		<thead class="thead-light">
			<tr>
				<th scope="col">Original URL</th>
				<th scope="col">Short URL</th>
				<th scope="col">All Clicks</th>
			</tr>
		</thead>
		<tfoot></tfoot>
		<tbody>
			{{#each urls as |url|}}
			<tr id="{{url.sURL}}">
				<td>
					<a href="{{url.oURLPath}}">{{url.oURL}}</a>
				</td>
				<td id="{{url.qualified}}">
					<a class="qualified" href="{{url.oURLPath}}" value="{{url.sURL}}">{{url.qualified}}</a>
				</td>
				<td class="count">{{url.count}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</div>